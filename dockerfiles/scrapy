FROM revolutionsystems/python:3.7.2-wee-optimized-lto

RUN apt-get update && \
    apt-get install -y --no-install-recommends gcc python3-dev libxml2-dev libxslt1-dev zlib1g-dev libffi-dev libssl-dev && \
    pip install scrapy scrapy-fake-useragent beautifulsoup4 lxml && \
    rm -rf /var/lib/apt/lists/*

CMD ["scrapy", "shell", "--nolog"]
